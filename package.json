{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "App.js",
  "scripts": {
    "dev": "NODE_ENV=dev && set debug=* && node_modules/.bin/ts-node-dev --respawn --transpileOnly src/server/index.ts",
    "dev:debug": "NODE_ENV=dev && set debug=* && node_modules/.bin/ts-node-dev --respawn --inspect --transpileOnly src/server/index.ts",
    "build": "tsc && cd src/client && npm install && npm run build",
    "start": "NODE_ENV=production node build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/node": "^13.13.4",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "eslint": "^7.28.0",
    "express": "^4.17.1",
    "express-correlation-id": "^1.3.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "pino-http": "^5.5.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src/server"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
